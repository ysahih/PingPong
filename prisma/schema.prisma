model Room {
    id   Int      @id @default(autoincrement())
    name String   @unique
    type ROOMTYPE @default(PUBLIC)
    password String?
    image String?

    users    UserRoom[]
    messages Message[]
    banned    User[]

    // lastMsjAt DateTime
}

